{
  "title": "Firefox custom remaps",
  "rules": [
    {
      "description": "Toggle sidebar with Command+S",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "z",
              "modifiers": ["control"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox.*$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Copy URL with Command+Shift+C",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^org\\.mozilla\\.firefox.*$"],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["command", "shift"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["command"]
            },
            {
              "key_code": "c",
              "modifiers": ["command"]
            },
            { "key_code": "escape" },
            {
              "shell_command": "/opt/homebrew/bin/terminal-notifier -title 'Copied URL to clipboard' -message \"$(pbpaste | sed 's/\\(.\\{100\\}\\).*/\\1.../')\" -group 'firefox-url-copy' -sound Frog"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
